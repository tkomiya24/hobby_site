<section>
  <div class="page-header">
    <h1>
      Here are some other users
    </h1>
  </div>
  <%= form_tag('/musicians/search', method: :get, role: 'form', class: 'form-inline') do %>
    <div class="form-group">
      <%= text_field_tag(:query, @query, placeholder: 'Enter username', class: 'form-control') %>
    </div>
    <div class="form-group">
      <%= select_tag(:type, options_for_select(musician_type_options, @selected), class: 'form-control')%>
    </div>
    <%= submit_tag('Search', class: 'btn btn-default') %>
  <% end %>
  <ul class="search-results">
    <% @musicians.each do |musician| %>
      <%= render(partial: 'musicians/summary', locals: {musician: musician}) %>
    <% end %>
  </ul>
</section>
