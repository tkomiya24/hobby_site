<%= error_messages_for(@user) %>
<div class="form-group">
  <%= u.label(:email, class: 'control-label', title: "E-mail") %>
  <%= u.text_field(:email, {class: 'form-control'}) %>
</div>
<div class="form-group">
  <%= u.label(:username, class: 'control-label') %>
  <%= u.text_field(:username, class: 'form-control')%>
</div>
<div class="form-group">
  <%= u.label(:first_name, "First Name", class: 'control-label') %>
  <%= u.text_field(:first_name, {class: 'form-control'}) %>
</div>
<div class="form-group">
  <%= u.label(:last_name, "Last Name", class: 'control-label') %>
  <%= u.text_field(:last_name, {class: 'form-control'}) %>
</div>
<div class="form-group">
  <%= u.label(:city, class: 'control-label') %>
  <%= u.text_field(:city, {class: 'form-control'}) %>
</div>
<div class="form-group">
  <%= u.label(:password, class: 'control-label', title: "Password") %>
  <%= u.password_field(:password, {class: 'form-control'})%>
</div>
<div class="form-group">
  <%= u.label(:password_confirmation, "Repeat Password", class: 'control-label') %>
  <%= u.password_field(:password_confirmation, class: 'form-control') %>
</div>
