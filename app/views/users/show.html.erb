	<% @title = "Info for user " + @user.username %>

<dib class ='container'>
	<table>
		<tr>
			<th>Username</th>
			<td><%= @user.username %></td>
		</tr>
		<tr>
			<th>First Name</th>
			<td><%= @user.first_name %></td>
		</tr>
		<tr>
