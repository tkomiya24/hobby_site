<%= form_for(@user, ) do |f| %>
  <div class="form-group">
    <%= f.label(:password, 'Enter your new password', class: 'control-label') %>
    <%= f.password_field(:password, class: 'form-control') %>
  </div>
  <div class="form-group">
    <%= f.label(:password_confirmation, 'Confirm your new password', class: 'control-label') %>
    <%= f.password_field(:password_confirmation, class: 'form-control') %>
  </div>
  <%= f.submit('Submit', class: 'btn btn-primary') %>
  <%= link_to('Cancel', edit_user_path ,class: 'btn btn-danger') %>
<% end %>
