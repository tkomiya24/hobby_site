<hr/>
<h3>Drummer</h3>
<% if @user.id == session[:user_id] %>
  <%= link_to 'Edit', controller: :drummers, action: :edit %>
  <%= link_to 'Delete', controller: :drummers, action: :destroy, method: :delete %>
<% end %>
<table>
  <tr>
    <th>Background Vocals</th>
    <td><%= musician.background_vocals %></td>
  </tr>
  <tr>
    <th>Double Kick</th>
    <td><%= musician.specific.double_kick %></td>
  </tr>
  <tr>
    <th>Experience</th>
    <td><%= musician.experience %></td>
  </tr>
  <tr>
    <th>Proficiency</th>
    <td><%= musician.proficiency %></td>
  </tr>
</table>
<% unless @user.id == session[:user_id] %>
  <%= link_to 'Write a review', controller: :drummers, action: :review, params: {reviewable_id: user.drummer.id}  %>
<% end %>
