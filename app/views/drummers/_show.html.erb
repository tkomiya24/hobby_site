<hr/>
<h3>Drummer</h3>
<% if @user.id == session[:user_id] %>
  <%= link_to 'Edit', controller: :drummers, action: :edit %>
  <%= link_to 'Delete', controller: :drummers, action: :destroy, method: :delete %>
<% end %>
<table>
  <tr>
    <th>Background Vocals</th>
    <td><%= user.drummer.musical_hobby.background_vocals %></td>
  </tr>
  <tr>
    <th>Double Kick</th>
    <td><%= user.drummer.double_kick %></td>
  </tr>
  <tr>
    <th>Experience</th>
    <td><%= user.drummer.musical_hobby.experience %></td>
  </tr>
  <tr>
    <th>Proficiency</th>
    <td><%= user.drummer.musical_hobby.proficiency %></td>
  </tr>
</table>
