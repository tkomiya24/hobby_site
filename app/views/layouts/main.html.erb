<!doctype html>
<html>
  <head>
    <title><%= @title if !@title.blank? %></title>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>
  <body style="margin-top: 100px">

    <nav class = "navbar navbar-default navbar-fixed-top">
      <div class='container-fluid'>
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#actions">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to(root_path, {:class => 'navbar-brand'}) do %>
            Hobby Site
          <% end %>
        </div>
        <ul class = 'nav navbar-nav'>
          <li><%= link_to("My Profile", {:controller => 'users', :action => 'show'}) %></li>
        </ul>
        <div class="collapse navbar-collapse" id="actions">
          <ul class = "nav navbar-nav navbar-right">
            <% if session[:user_id] %>
            <li>
            <%= link_to("Edit Profile", {:controller => 'users', :action => 'edit'}) %>
            </li>
            <li>
            <%= link_to("Logout", {:controller => 'users', :action => 'logout'}) %>
            </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
    <div class ="container">
    <% if !flash[:notice].blank? %>
    <div id="flash-message" class = "container">
    <%= flash[:notice] %>
    </div>
    <% end %>
    </div>
    <div id="content" class = "container">
    <%= yield %>
    </div>
    <footer></footer>
  </body>
</html>
