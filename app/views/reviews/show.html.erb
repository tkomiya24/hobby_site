<div class="container">
  <h3>
    Review for
    <%= @review.reviewable.specific.class.name.downcase %>
    <%= @review.reviewable.user.first_name.capitalize %>
    <%= @review.reviewable.user.last_name.capitalize %>
  </h3>
</div>
<div class="container">
  <h5>
    <%= @review.rating %>/5
  </h5>
  <p>
    <%= @review.review %>
  </p>
  <%= link_to('Back to user', { controller: 'users', action: 'show', id: @review.reviewable.user }) %>
</div>
