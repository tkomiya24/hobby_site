<div class="container">
  <h3>
    <% if authenticated_user?(@review.user) %>
    Your
    <% else %>
    <%= "#{@review.user.username}'s" %>
    <% end %>
    review of
    <%= @review.reviewable.specific.class.name.downcase %>
    <%= @review.reviewable.user.username %>
  </h3>
</div>
<div class="container">
  <h5>
    <%= @review.rating %>/5
  </h5>
  <p>
    <%= @review.review %>
  </p>
  <%= link_to('Back to user', { controller: 'users', action: 'show', id: @review.reviewable.user }) %>
</div>
