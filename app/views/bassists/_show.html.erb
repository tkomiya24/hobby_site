<hr/>
<h3>Bassist</h3>
<% if @user.id == session[:user_id] %>
  <%= link_to 'Edit', controller: :bassists, action: :edit %>
  <%= link_to 'Delete', controller: :bassists, action: :destroy, method: :delete %>
<% end %>
<table>
  <tr>
    <th>Background Vocals</th>
    <td><%= user.bassist.musical_hobby.background_vocals %></td>
  </tr>
  <tr>
    <th>Plays five string?</th>
    <td><%= user.bassist.five_string %></td>
  </tr>
  <tr>
    <th>Plays six string?</th>
    <td><%= user.bassist.six_string %></td>
  </tr>
  <tr>
    <th>Experience</th>
    <td><%= user.bassist.musical_hobby.experience %></td>
  </tr>
  <tr>
    <th>Proficiency</th>
    <td><%= user.bassist.musical_hobby.proficiency %></td>
  </tr>
</table>
